    "class IntegerNotAllowed(Exception):\n",
    "    pass\n",
    "\n",
    "def no_int(x):\n",
    "    if isinstance(x, int): \n",
    "        raise IntegerNotAllowed(f\"The value '{x}' is not acceptable.\")\n",
    "    else:\n",
    "        print(\"Input is valid.\")"
