    "class Name_Error(Exception):\n",
    "    pass\n",
    "\n",
    "def peru(x):\n",
    "    if isinstance(x,str):\n",
    "        raise Name_Error(f\"the {x} is not acceptable name \")\n",
    "    else:\n",
    "        print(\"its okay then\")"
